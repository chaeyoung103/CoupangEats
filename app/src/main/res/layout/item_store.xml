<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_store_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/store"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_store_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_store_iv"
        app:layout_constraintTop_toBottomOf="@id/item_store_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="스윗그리드 크로플"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/item_star_iv"
        app:layout_constraintTop_toBottomOf="@id/item_store_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_store_name_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/item_review_tv"
        app:layout_constraintStart_toEndOf="@id/item_star_iv"
        app:layout_constraintTop_toBottomOf="@id/item_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:text="5.0 . 0.5km"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_album_singer_tv"
        app:layout_constraintStart_toStartOf="@id/item_star_iv"
        app:layout_constraintTop_toBottomOf="@id/item_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="무료배달"
        android:textColor="@color/black"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>