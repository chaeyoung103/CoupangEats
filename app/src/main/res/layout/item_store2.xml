<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item2_store1_iv"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/store2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item2_store2_iv"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:scaleType="fitXY"
        android:src="@drawable/store3"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item2_store1_iv"/>

    <ImageView
        android:id="@+id/item2_store3_iv"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        android:src="@drawable/store3"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/item2_store2_iv"
        app:layout_constraintStart_toEndOf="@+id/item2_store1_iv"/>


    <TextView
        android:id="@+id/item2_store_name_tv"
        app:layout_constraintStart_toStartOf="@id/item2_store1_iv"
        app:layout_constraintTop_toBottomOf="@id/item2_store3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="탐나종합어시장 미사역점"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item2_star_iv"
        app:layout_constraintTop_toBottomOf="@id/item2_store_name_tv"
        app:layout_constraintStart_toStartOf="@id/item2_store_name_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/item2_review_tv"
        app:layout_constraintStart_toEndOf="@id/item2_star_iv"
        app:layout_constraintTop_toBottomOf="@id/item2_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:text="5.0 . 0.5km"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_album_singer_tv"
        app:layout_constraintStart_toEndOf="@id/item2_review_tv"
        app:layout_constraintTop_toTopOf="@id/item2_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="무료배달"
        android:textColor="@color/black"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>